# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0
FLASK_SECRET_KEY=your-super-secure-secret-key-here-min-32-chars

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/smart_learning_hub
# For SQLite (not recommended for production):
# DATABASE_URL=sqlite:///site.db

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Security Settings
OAUTHLIB_INSECURE_TRANSPORT=0

# Optional: Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=1
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Optional: Redis Configuration (for sessions/caching)
REDIS_URL=redis://localhost:6379/0
