{
  "manifest_version": 3,
  "name": "Smart Learning Hub Connector",
  "version": "1.0",
  "description": "Connects Google Classroom and Microsoft Teams data to Smart Learning Hub.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://classroom.google.com/*",
    "*://teams.microsoft.com/*",
    "http://127.0.0.1:5000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://classroom.google.com/*"],
      "js": ["content_scripts/google_classroom.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://teams.microsoft.com/*"],
      "js": ["content_scripts/ms_teams.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}